<?xml version="1.0" encoding="utf-8"?>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:uber="http://schemas.android.com/apk/res-auto"
        android:id="@+id/hostel_detail_scrollview"
        android:focusableInTouchMode="true"
        android:scrollbars="vertical"
        android:descendantFocusability="beforeDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.synnapps.carouselview.CarouselView
                android:id="@+id/hostel_image_pager"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                app:fillColor="#FFFFFFFF"
                android:focusable="true"
                app:autoPlay="false"
                app:pageColor="#00000000"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp">

            </com.synnapps.carouselview.CarouselView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:paddingTop="10dp"
                            android:id="@+id/tv_hostel_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryText"
                            android:text=""
                            android:layout_marginBottom="8dp"
                            android:textSize="24sp"
                            />

                        <TextView
                            android:paddingTop="10dp"
                            android:id="@+id/tv_hostel_availability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_space_available"
                            android:drawablePadding="8dp"
                            android:text="" />


                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_detail_location"
                            android:drawableLeft="@drawable/ic_location"
                            android:layout_width="wrap_content"
                            android:drawablePadding="16dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Location"
                            android:layout_marginBottom="16dp"
                            android:layout_marginRight="25dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">


                            <Button
                                android:id="@+id/btn_detail_directions"
                                android:layout_width="wrap_content"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:background="@drawable/btn_primary_round"
                                android:paddingRight="8dp"
                                android:paddingLeft="8dp"
                                android:layout_height="wrap_content"
                                android:text="get directions"/>


                        </LinearLayout>


                        <com.uber.sdk.android.rides.RideRequestButton
                            android:id="@+id/request"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            uber:ub__style="black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        >

                        <TextView
                            android:id="@+id/tv_hostel_detail_description"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_hostel_contact"
                            android:drawableLeft="@drawable/ic_phone"
                            android:drawablePadding="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text=""
                            />

                        <Button
                            android:id="@+id/call_button"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:background="@drawable/btn_primary_round_transparent"
                            android:layout_marginLeft="16dp"
                            android:text="@string/txtCall"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="18sp"
                            android:text="Amenities"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/hostel_amenities_recycler_view"
                            android:layout_width="match_parent"
                            android:focusable="false"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="18sp"
                            android:text="Pricing"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/hostel_pricing_recyclerView"
                            android:layout_width="match_parent"
                            android:focusable="false"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom = "5dp"
                            android:textStyle="italic"
                            android:text="please be sure to call the hostel to verify the prices."
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>



